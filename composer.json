{
  "name": "profesia/ddd-backbone",
  "type": "library",
  "license": "MIT",
  "description": "Set of classes helping to lay the foundation for a DDD application",
  "authors": [
    {
      "name": "Matej BÃ¡dal",
      "email": "matej.badal@profesia.sk"
    }
  ],
  "require": {
    "php": "^8.0",
    "psr/log": "^1.0 || ^2.0 || ^3.0",
    "profesia/messaging-core": "^0.10.0"
  },
  "autoload": {
    "psr-4": {
      "Profesia\\DddBackbone\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Profesia\\DddBackbone\\Test\\": "tests/"
    }
  },
  "require-dev": {
    "phpunit/phpunit": "^9.0",
    "mockery/mockery": "^1.2",
    "squizlabs/php_codesniffer": "^3.5",
    "phpstan/phpstan": "^0.12.68",
    "phpstan/phpstan-strict-rules": "^0.12.9"
  },
  "archive": {
    "exclude": [
      "docs",
      "tests"
    ]
  },
  "scripts": {
    "test": "XDEBUG_MODE=coverage ./vendor/bin/phpunit",
    "analyse": "phpstan analyse"
  }
}
